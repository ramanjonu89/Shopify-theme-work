<section
  class="customer login"
  data-section-id="{{ section.id }}"
  data-section-type="reset-password"
>

  <div class="login__main">
    <h1 class="login__heading ff-heading fs-page-heading c-heading">{{ 'customer.activate_account.title' | t }}</h1>
    <p class="login__subheading fs-primary-body c-subheading">{{ 'customer.activate_account.subtext' | t }}</p>

    {% form 'activate_customer_password' %}
      {%- if form.errors -%}
        <div>
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <input
        type="password"
        value=""
        name="customer[password]"
        id="CustomerPassword"
        class="input input--round"
        placeholder="{{ 'customer.activate_account.password' | t }}"
      >

      <input
        type="password"
        value=""
        name="customer[password_confirmation]"
        id="CustomerPasswordConfirmation"
        class="input input--round"
        placeholder="{{ 'customer.activate_account.password_confirm' | t }}"
      >

      <input type="submit" class="btn btn--primary btn--full" value="{{ 'customer.activate_account.submit' | t }}">
      <div class="login__links fs-body fs-body-base">
        <button type="submit" class="c-link" name="decline">{{ 'customer.activate_account.cancel' | t }}</button>
      </div>
    {% endform %}
  </div>

</section>
