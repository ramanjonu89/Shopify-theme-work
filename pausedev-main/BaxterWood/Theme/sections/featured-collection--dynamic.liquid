{% render 'section--featured-collection' with
  heading: section.settings.title,
  collection: collections[section.settings.collection],
  per_row: section.settings.per_row,
  rows: section.settings.rows,
  aspect_ratio: section.settings.aspect_ratio
%}

{% schema %}
  {
    "name": "Featured collection",
    "class": "inline-section",
    "settings": [
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "range",
        "id": "per_row",
        "label": "Products per row",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "rows",
        "label": "Rows",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 1
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "Image aspect ratio",
        "options": [
          { "label": "Natural", "value": "natural" },
          { "label": "Square (1:1)", "value": "square" },
          { "label": "Landscape (3:2)", "value": "landscape" },
          { "label": "Portrait (2:3)", "value": "portrait" }
        ],
        "default": "natural"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection",
        "settings": {}
      }
    ]
  }
{% endschema %}
