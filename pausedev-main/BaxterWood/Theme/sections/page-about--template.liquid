{% render 'pages--page' with
  intro: section.settings.intro,
  blocks: section.blocks
%}

{% schema %}
  {
    "name": "About page",
    "class": "page-section",
    "settings": [
      {
        "id": "intro",
        "type": "textarea",
        "label": "Intro"
      },
      {
        "id": "enable_full_width",
        "type": "checkbox",
        "label": "Enable full width",
        "info": "If enabled this section will span the entire width of the window",
        "default": false
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "video_url",
            "label": "Video link",
            "info": "Direct link to .mp4 video file. [Learn more here](https://fluorescent.co/help/ira/collage/#add-a-video-to-a-collage-section)."
          }
        ]
      }
    ]
  }
{% endschema %}